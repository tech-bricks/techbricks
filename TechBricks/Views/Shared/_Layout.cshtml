                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "index", "home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Services", "services", "home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("About Us", "about", "home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact", "contact", "home", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                    <div class="ms-auto d-flex align-items-center">
                        <a class="btn btn-primary" href="/home/contact">Get A Quote</a>
                    </div>
                </div>
            </div>
        </nav>
